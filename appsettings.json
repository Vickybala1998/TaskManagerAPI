    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "E://TaskManagerProject//TaskManagerAPI/logs/webapi-.log",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "TaskManagerDb": "Server=DESKTOP-TCMEJ90\\SQLEXPRESS;Database=TaskManager;Trusted_Connection=True;TrustServerCertificate=True;"
  }
}
